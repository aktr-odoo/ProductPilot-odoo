<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="service_type_baby_sitting_action" model="ir.actions.act_window">
        <field name="name">Baby Sitting Service</field>
        <field name="res_model">service.type.baby.sitting</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Service Type
            </p> 
        </field>
    </record>

    <!-- Tree View -->
    <record id="service_type_view_tree" model="ir.ui.view">
        <field name="name">service.type.baby.sitting.tree</field>
        <field name="model">service.type.baby.sitting</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="sequence" widget="handle"/>
                <field name="name" />
            </tree> 
        </field>
    </record>

    <!-- Form View -->
    <record id="service_type_view_form" model="ir.ui.view">
        <field name="name">service.type.baby.sitting.form</field>
        <field name="model">service.type.baby.sitting</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="service_type_view_search" model="ir.ui.view">
        <field name="name">service.type.baby.sitting.search</field>
        <field name="model">service.type.baby.sitting</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name" />
            </search>
        </field>
    </record>

</odoo>
